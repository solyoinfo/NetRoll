@page "/Account/Manage/PersonalData"

@inject IdentityUserAccessor UserAccessor
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<NetRoll.Components.Account.Pages.Manage.PersonalData> L

<PageTitle>@L["PageTitle"]</PageTitle>

<StatusMessage />
<h3>@L["Heading"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>@L["Intro"]</p>
        <p>
            <strong>@L["Warning"]</strong>
        </p>
        <form action="Account/Manage/DownloadPersonalData" method="post">
            <AntiforgeryToken />
            <button class="btn btn-primary" type="submit">@L["Download"]</button>
        </form>
        <p>
            <a href="Account/Manage/DeletePersonalData" class="btn btn-danger">@L["Delete"]</a>
        </p>
    </div>
</div>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        _ = await UserAccessor.GetRequiredUserAsync(HttpContext);
    }
}
